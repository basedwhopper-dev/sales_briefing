    <script>
        // Sample data update function
        function updateData() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            // Simulate data update with random values
            document.getElementById('leads').textContent = Math.floor(Math.random() * 200) + 50;
            document.getElementById('firstAppointments').textContent = Math.floor(Math.random() * 100) + 30;
            document.getElementById('appointmentRate').textContent = Math.floor(Math.random() * 40 + 50) + '%';
            document.getElementById('avgDays').textContent = (Math.random() * 5 + 1).toFixed(1);
            document.getElementById('secondAppointments').textContent = Math.floor(Math.random() * 60) + 20;
            document.getElementById('closingRate').textContent = Math.floor(Math.random() * 30 + 20) + '%';
            
            alert(`Daten aktualisiert f√ºr Zeitraum: ${startDate} bis ${endDate}`);
        }

        function closeWindow() {
            // For now just hide the window
            document.body.style.display = 'none';
            alert('Fenster geschlossen');
        }

        // Set current month as default
        function setCurrentMonth() {
            const now = new Date();
            const firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
            const lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);
            
            document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
            document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
        }

        // Initialize with current month
        setCurrentMonth();
    </script>
